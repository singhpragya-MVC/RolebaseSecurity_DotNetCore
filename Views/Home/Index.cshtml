@model  IEnumerable<RoleBasedemo.Models.College>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>College List</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>

            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GroupBy(x=>x.Name))
        {
            <tr>
                <td>
                    <span class="h3">@item.Key</span>
                </td>

                <td>
                    <a asp-action="Search" asp-controller="Home" asp-route-id="@item.Key">View</a> |
                </td>

            </tr>
        }
    </tbody>
</table>
