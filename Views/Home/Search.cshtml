@model IEnumerable<RoleBasedemo.Models.College>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search</h1>
<form asp-controller="Home" asp-action="Search">
    <p>
        Curriculam: <input type="text" name="curriculam">
        Fee: <input type="text" name="Fee">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curriculam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curriculam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fees)
            </td>
        </tr>
}
    </tbody>
</table>
